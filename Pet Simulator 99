local function Wait(x)
    local startTick = tick()  -- Czas rzeczywisty
    local startClock = os.clock()  -- Czas CPU

    for i = 1, x do
        task.wait()
    end

    local logTime = false  -- Ustaw true, by wczy logowanie

    if logTime then
        local totalTick = tick() - startTick
        local totalClock = os.clock() - startClock
        print("Wait(" .. x .. ") trwao okoo " .. totalTick .. " sekund (czas rzeczywisty).")
        print("Czas u偶ywanego CPU: " .. totalClock .. " sekund.")
    end
end

